<html>
<head>
    <title>OMG SHOES!</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>Brands</h1>
        </div>


        {% if brands is not empty %}
            <ul class="list-group">
                <li class="list-group-item active">List of Brands</li>
                {% for brand in brands|sort %}
                    <a href="brands/{{ brand.getId }}" class="list-group-item">{{ brand.getTitle }}</a>
                {% endfor %}
            </ul>
        {% else %}
            <h3>No Brands are listed.</h3>
        {% endif %}

        <form action="/brands" method="post">
            <label for="brand_title">Add a brand:</label>
            <input type="text" name="brand_title" id="brand_title" class="form-control" required>
            <br>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>

        {% if brands is not empty %}
            <br>
            <form action="delete_all_brands" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit" class="btn btn-danger">Remove All Brands</button>
            </form>
            <br>
        {% endif %}

        <form action="/">
            <button type="submit" class="btn btn-primary">Back Home</button>
        </form>

    </div>
</body>
</html>
